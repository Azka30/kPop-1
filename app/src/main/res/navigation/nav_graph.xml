<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/recordFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/recordFragment"
        android:name="com.myfirstapplication.kpop.RecordFragment"
        android:label="fragment_record"
        tools:layout="@layout/fragment_record" >
        <action
            android:id="@+id/action_recordFragment_to_listFragment2"
            app:destination="@id/listFragment"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in"
            />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.myfirstapplication.kpop.AudioListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_audio_list" />

</navigation>